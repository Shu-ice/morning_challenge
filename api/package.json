{
  "name": "morning-challenge-api",
  "version": "1.0.0",
  "description": "Vercel Serverless Functions for Morning Challenge API",
  "main": "index.js",
  "scripts": {
    "test": "jest --setupFilesAfterEnv=./__tests__/setup.js",
    "test:watch": "jest --watch --setupFilesAfterEnv=./__tests__/setup.js",
    "test:coverage": "jest --coverage --setupFilesAfterEnv=./__tests__/setup.js"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dayjs": "^1.11.11",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.5.0",
    "mongoose": "^8.3.2"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^7.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/__tests__/**",
      "!**/coverage/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}