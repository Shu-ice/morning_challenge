{
  "version": 2,
  "name": "morning-math-challenge",
  "installCommand": "npm install --legacy-peer-deps --include=dev",
  "buildCommand": "npm run build:production",
  "outputDirectory": "dist",
  "routes": [
    {
      "src": "/api/rankings/daily",
      "dest": "/api/rankings"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "MONGODB_MOCK": "false"
  },
  "regions": ["hnd1"],
  "github": {
    "autoAlias": false
  }
} 