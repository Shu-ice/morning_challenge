{
  "version": 2,
  "name": "morning-math-challenge",
  "installCommand": "npm install --legacy-peer-deps --include=dev",
  "buildCommand": "npm run build:vercel",
  "outputDirectory": "dist",
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs18.x",
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "MONGODB_MOCK": "true"
  },
  "regions": ["hnd1"],
  "github": {
    "autoAlias": false
  }
} 