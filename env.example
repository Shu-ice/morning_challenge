# Morning Challenge Environment Variables
# 本番環境では必ずこれらの値を変更してください

# === JWT設定 ===
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=30d

# === データベース設定 ===
# 本番環境（MongoDB Atlas使用）
MONGODB_URI=mongodb+srv://morning_challenge_user:<password>@cluster0.xxxxx.mongodb.net/?retryWrites=true&w=majority
MONGODB_MOCK=false

# 開発環境（モック使用）
# MONGODB_URI=mongodb://localhost:27017/morning_challenge
# MONGODB_MOCK=true

# === サーバー設定 ===
NODE_ENV=development
BACKEND_PORT=5003
FRONTEND_PORT=3004

# === 開発設定 ===
DISABLE_TIME_CHECK=false

# === ログ設定 ===
LOG_LEVEL=info

# === セキュリティ設定 ===
# 管理者アカウント設定（本番環境では必ず変更してください）
ADMIN_EMAIL=admin@example.com
ADMIN_DEFAULT_PASSWORD=SecurePassword123!
# ADMIN_DEFAULT_PASSWORD を空にすると、安全なランダムパスワードが自動生成されます
# 生成されたパスワードはサーバー起動時のログに表示されます

# === Railway デプロイ用設定 ===
# Railway Variables で以下を設定してください：
# JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long
# ADMIN_EMAIL=admin@yourmail.com
# ADMIN_DEFAULT_PASSWORD=SecurePassword123!
# MONGODB_URI=mongodb+srv://railway-admin-user:31415926535@cluster.mongodb.net/morning_challenge
# NODE_ENV=production 