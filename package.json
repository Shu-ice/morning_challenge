{
  "name": "morning-math-challenge",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "朝のプログラミング練習アプリ - フルスタック数学チャレンジプラットフォーム",
  "author": "Your Name",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "vite",
    "dev:backend": "cross-env NODE_ENV=development DISABLE_TIME_CHECK=true MONGODB_MOCK=true node server/server.js",
    "dev:prod": "concurrently \"npm run dev:frontend\" \"npm run dev:backend:prod\"",
    "dev:backend:prod": "cd server && cross-env NODE_ENV=production DISABLE_TIME_CHECK=true MONGODB_MOCK=false node server.js",
    "build": "tsc && vite build",
    "build:production": "cross-env NODE_ENV=production npm run build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "type-check": "tsc --noEmit",
    "start": "npm run dev",
    "start:production": "cross-env NODE_ENV=production concurrently \"npm run preview\" \"npm run dev:backend:prod\"",
    "server": "cd server && cross-env NODE_ENV=development DISABLE_TIME_CHECK=true MONGODB_MOCK=true node server.js",
    "server:prod": "cd server && cross-env NODE_ENV=production DISABLE_TIME_CHECK=false MONGODB_MOCK=false node server.js",
    "clean": "rimraf dist node_modules/.cache",
    "setup": "npm install && cd server && npm install",
    "test": "echo \"テストは今後実装予定\" && exit 0"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.79.0",
    "@tanstack/react-query-devtools": "^5.79.0",
    "@types/react-router-dom": "^5.3.3",
    "axios": "^1.9.0",
    "date-fns": "^4.1.0",
    "dotenv": "^16.5.0",
    "mongodb": "^6.16.0",
    "mongoose": "^8.14.1",
    "node-fetch": "^3.3.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.5.3",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@stagewise/toolbar-react": "^0.4.8",
    "@types/axios": "^0.14.4",
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^22.15.3",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitejs/plugin-react": "^4.4.1",
    "autoprefixer": "^10.4.21",
    "bcryptjs": "^2.4.3",
    "concurrently": "^9.1.2",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "cross-port-killer": "^1.4.0",
    "dayjs": "^1.11.11",
    "dotenv-cli": "^7.4.2",
    "eslint": "^8.57.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.5",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "kill-port": "^2.0.1",
    "mongodb-memory-server": "^10.0.0",
    "postcss": "^8.5.3",
    "seedrandom": "^3.0.5",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.4.2",
    "vite": "^5.1.4",
    "vite-tsconfig-paths": "^5.1.4"
  }
}
