{
  "name": "morning-math-challenge",
  "version": "0.1.0",
  "private": true,
  "description": "朝のプログラミング練習アプリ - フルスタック数学チャレンジプラットフォーム",
  "author": "Your Name",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "vite",
    "dev:backend": "cross-env NODE_ENV=development DISABLE_TIME_CHECK=true MONGODB_MOCK=true node server/server.js",
    "dev:prod": "concurrently \"npm run dev:frontend\" \"npm run dev:backend:prod\"",
    "dev:backend:prod": "cd server && cross-env NODE_ENV=production DISABLE_TIME_CHECK=true MONGODB_MOCK=false node server.js",
    "prebuild": "node scripts/validate_env.mjs",
    "postinstall": "cd server && npm install",
    "build": "vite build",
    "build:production": "cross-env NODE_ENV=production npm run build",
    "build:railway": "npm run build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "type-check": "tsc --noEmit",
    "start": "npm run dev",
    "start:production": "node server/server.js",
    "start:railway": "node server/server.js",
    "server": "cd server && cross-env NODE_ENV=development DISABLE_TIME_CHECK=true MONGODB_MOCK=true node server.js",
    "server:prod": "cd server && cross-env NODE_ENV=production DISABLE_TIME_CHECK=false MONGODB_MOCK=false node server.js",
    "clean": "rimraf dist node_modules/.cache",
    "setup": "npm install && cd server && npm install",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "seed": "node scripts/update_admin_pass.js",
    "smoke": "node scripts/quick_smoke_test.js",
    "smoke:production": "node scripts/smoke-test.js",
    "lowercase-emails": "node server/scripts/lowercaseEmails.js",
    "migrate-users": "node server/scripts/migrateUsersFromTest.js"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.79.0",
    "@tanstack/react-query-devtools": "^5.79.0",
    "axios": "^1.9.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dayjs": "^1.11.11",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "express-session": "^1.17.3",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "luxon": "^3.7.1",
    "mongodb": "^6.5.0",
    "mongodb-memory-server": "^10.1.4",
    "mongoose": "^8.3.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.5.3",
    "stripe": "^18.4.0",
    "uuid": "^11.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@stagewise/toolbar-react": "^0.4.8",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.0.0",
    "@types/axios": "^0.14.4",
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^22.15.3",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitejs/plugin-react": "^4.4.1",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^7.4.2",
    "eslint": "^8.57.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.5",
    "jsdom": "^23.0.0",
    "mongodb-memory-server": "^10.0.0",
    "postcss": "^8.5.3",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.4.2",
    "vite": "^5.1.4",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^1.0.0"
  }
}
